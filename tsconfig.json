{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "module": "CommonJS",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "stripInternal": true,
    "target": "ES2018",
    "esModuleInterop": true,
    "typeRoots": ["./src/types"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "dist",
    "node_modules",
    "../../node_modules/**",
    "**/*.d.ts",
    "**/*.test.tsx"
  ]
}
